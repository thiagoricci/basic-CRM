# Database connection
DATABASE_URL="postgresql://user:password@localhost:5432/crm_db"

# NextAuth.js
NEXTAUTH_SECRET="change-this-to-a-secure-random-string-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Upstash Redis (for rate limiting)
# Get these from your Upstash dashboard: https://console.upstash.com/
UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token-here"

# Email service (Resend)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="re_your_resend_api_key_here"
# The email address that will send emails (must be verified in Resend)
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# Upstash API (optional, for other Upstash services)
UPSTASH_API_KEY="your-upstash-api-key-here"
